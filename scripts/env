#!/bin/bash
SCRIPT_DIR="$(dirname "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/$(basename "${BASH_SOURCE[0]}")")"
ROOT_DIR="$(realpath "$SCRIPT_DIR/..")"
export SCRIPT_DIR
export ROOT_DIR

export SRC_DIR="$ROOT_DIR/src"
export SCRIPT_DIR="$ROOT_DIR/scripts"
export TARGET_DIR="$ROOT_DIR/build"
export DIST_DIR="$TARGET_DIR/dist"
export TMP_DIR="$TARGET_DIR/src"
export CACHE_DIR="$TARGET_DIR/cache"

export SCRIPT_CHECKCMD="$SCRIPT_DIR/checkcmd"
export SCRIPT_BUILD="$SCRIPT_DIR/build"
export SCRIPT_RENDER="$SCRIPT_DIR/render.R"
export SCRIPT_CLEAN="$SCRIPT_DIR/clean"
